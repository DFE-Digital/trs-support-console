{% if task.potentialRecordMatch == "Yes" %}
  <h2 class="govuk-heading-m">Potential duplicate from</h2>
  
  {{ govukSummaryList({
    classes: "govuk-!-margin-bottom-7",
    rows: [
      {
        key: { text: "Source" },
        value: { html: task.sourceOfMatch }
      } if task.potentialRecordMatch == "Yes",
      {
        key: { text: "Created on" },
        value: { html: "[some_date]" }
      } 
    ]
  }) }}
{% endif %}

