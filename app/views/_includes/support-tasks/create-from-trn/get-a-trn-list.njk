<table class="govuk-table" data-module="moj-sortable-table">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th scope="col" class="govuk-table__header" aria-sort="ascending">Name</th>
      <th scope="col" class="govuk-table__header" aria-sort="none">Email</th>
      <th scope="col" class="govuk-table__header" aria-sort="none">Requested on</th>
      <th scope="col" class="govuk-table__header" aria-sort="none">Potential duplicate</th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    {% for req in data.trnreq %}
    {% if req.sourceOfMatch === "Get a TRN" %}
      <tr class="govuk-table__row">
        <td class="govuk-table__cell"><a href="/support-tasks/create-record/from-trn-request/match-create-record/show/{{req.id}}" class="govuk-link">{{req.firstName}} {{req.lastName}}</a></td>
        <td class="govuk-table__cell">{{req.email}}</td>
        <td class="govuk-table__cell" data-sort-value="{{req.dateOfTrnRequest}}">
          {{req.dateOfTrnRequest}}
        </td>
        <td class="govuk-table__cell">
          <strong class="govuk-tag 
            {% if req.potentialRecordMatch == 'Yes' %}
              govuk-tag--red
            {% elif req.potentialRecordMatch == 'No' %}
              govuk-tag--green
            {% else %}
              govuk-tag--yellow
            {% endif %}
          ">
            {{req.potentialRecordMatch}}
          </strong>
        </td>
      </tr>
      {% endif %}  
    {% endfor %}
  </tbody>
</table>


