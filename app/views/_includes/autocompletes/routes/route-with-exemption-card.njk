					value: {
						html: data.trainingProvider
					}
				},

				{
					key: {
						text: "Degree type"
					},
					value: {
						html: data.degreeTypes
					}
				},

				{
					key: {
						text: "Country of training"
					},
					value: {
						text: data.routeCountryOfTraining
					}
				},
				
				{
					key: {
						text: "Age range"
					},
					value: {
						text: "From " + data.ageFromRestriction + " to " + data.ageToRestriction
					}
				},
				{
					key: {
						text: "Subjects"
					},
					value: {
						html: subjectChoices 
					}
				}     
			]
}) }}