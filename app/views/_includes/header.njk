{% if data.user %}
  {% set serviceUrl = '/general' %}
{% else %}
  {% set serviceUrl = '/account/sign-in' %}
{% endif %}

{{ govukHeader({
    serviceUrl: serviceUrl,
    navigationClasses: "govuk-header__navigation--end",
    classes: "govuk-header--full-width-border",
    navigation: [
    {
      href: '/account/sign-out',
      text: 'Sign out',
      current: (headerNavId == "signOut")
    }
    ] if data.user
  })
}}


{{ govukServiceNavigation({
    serviceName: serviceName,
    navigation: [
      {
        href: '#',
        text: 'Find a record',
        current: (serviceNavId == "findRecord")
      },{
        href: '#',
        text: 'Support tasks',
        current: (serviceNavId == "supportTasks")
      }
    ] if data.user
  }) 
}}

